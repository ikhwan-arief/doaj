# DOAJ API configuration
DOAJ_API_BASE=https://doaj.org/api/v4
DOAJ_API_KEY=
# DOAJ read-only endpoints may not require a key. If needed, put your key above.
DOAJ_API_KEY_HEADER=Authorization
DOAJ_API_KEY_PREFIX=Bearer

# Search configuration
DOAJ_JOURNALS_ENDPOINT=search/journals
DOAJ_QUERY=*:*
DOAJ_QUERY_PARAM=q
DOAJ_PAGE_PARAM=page
DOAJ_PAGE_SIZE_PARAM=pageSize
DOAJ_PAGE_SIZE=100
DOAJ_QUERY_IN_PATH=false

# Data paths
DOAJ_DATA_DIR=data
DOAJ_SCHEMA_PATH=config/schema.toml

# API server
DOAJ_API_PORT=8001
DOAJ_CORS_ORIGINS=http://localhost:8000
